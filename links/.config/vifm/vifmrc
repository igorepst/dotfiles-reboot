set vicmd=${EDITOR}
set caseoptions=pg
set dotfiles
set fastrun
set fillchars=vborder:Ç€
set tuioptions=pul
set findprg="fd %A %u"
set grepprg="rg %i --ignore-file $HOME/.config/ripgrep/ignore --ignore-case --follow --hidden --sort-files --no-heading --line-number %A %s"
set nofollowlinks
set history=1000
set nohlsearch
set ignorecase
set incsearch
set vimhelp

if $TERM == 'linux'
    colorscheme Default
else
    colorscheme igTermColors
endif

if has('win')
    filetype * start, explorer
else
    fileviewer *[^/] bat --paging=never --color=always --style=plain %c
    filetype * xdg-open 2>/dev/null &
endif
