#!/bin/sh
dir=$HOME/notes/src
mkdir -p "${dir}"

time=$(date +%Y-%m-%d)
noteFilename="${dir}/note-${time}.md"

if [ ! -f $noteFilename ]; then
  echo "# Notes for ${time}" > ${noteFilename}
fi

kitty --class=notetaker nvim -c "norm Go" \
  -c "norm Go## $(date +%H:%M)" \
  -c "norm G2o" \
  -c "norm zz" \
  -c "startinsert" ${noteFilename}

