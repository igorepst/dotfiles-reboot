#!/bin/bash

function process() {
    tput reset
    tput rmam # no wrapping
    local lines=$(($(tput lines) - 1))
    if [[ -d "${1}" ]]; then
        # shellcheck disable=SC2012
        ls -AgGhF --group-directories-first --color=always "${1}" | head -n ${lines}
    else
        local cols mimetype
        cols=$(tput cols)
        case "${1}" in
            *.7z | *.zip | *.jar | *.rar | *.war)
                7z l "${1}" #| head -n ${lines}
                ;;
            *.tar.gz | *.tgz | *.tar.bz2 | *.tbz | *.tbz2 | *.tar.xz | *.txz | *.tar.zst | *.tar.lzma | *.tlz | *.tar)
                tar -tvf "${1}" | head -n ${lines}
                ;;
            *.gz | *.Z) gzip -lv "${1}" | head -n ${lines} ;;
            *)
                mimetype=$(file -bL --mime-type "${1}")
                case "${mimetype}" in
                    image/*)
                        #                         magick identify -format '%[width] %[height]' Screenshot_20200727_203946.png
                        # if small, use --scale-up for icat
                        kitty +kitten icat --transfer-mode=stream --silent --place "${cols}x${lines}@0x0" --scale-up "${1}"
                        ;;
                    *)
                        #                 local encoding=$(file -bL --mime-encoding "${1}")
                        #                 if [ "${encoding}" = 'binary' ]; then
                        #                     echo Binary file
                        #                 else
                        bat --color=always --style=plain --line-range=:${lines} "${1}" 2> /dev/null
                        ;;
                        #                 fi
                esac
                ;;
        esac
    fi
    tput cup 0 0 # cursor to 0x0
}

function main() {
    local pipe="${PREVIEW_TUI_FIFO}"
    if [[ -z "$pipe" ]] || [[ ! -p "$pipe" ]]; then exit 1; fi
    trap 'rm -f $pipe' EXIT

    shopt -s nocasematch
    local fname procpid
    while true; do
        if read -r fname < "$pipe"; then
            [ -n "${procpid}" ] && kill "${procpid}"
            process "${fname}" &
            procpid=$!
        fi
    done
}

main "$@"
